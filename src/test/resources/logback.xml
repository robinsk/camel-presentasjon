<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level %class.%method\(\)#%L: %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="no.knowit.camel" level="DEBUG" />
    <logger name="org.apache.camel" level="INFO" />

    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>
